<%= form_for [:admin, @member], :html => { class: "admin-add" } do |f| %>
  <header>
    <h1><i class="fa fa-user"></i>
      <% if @member.new_record? %>
        New Member</h1>
      <% else %>
        Edit Member 
      <% end %>
    </h1>
  </header>
  <%= render "shared/errors", object: @member %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true %>
  </div>
  <div>
    <%= f.label :function %>
    <%= f.text_field :function %>
  </div>
  <div>
    <%= f.label :image %>
    <%= f.attachment_field :image, direct: true %>

    <div id="image"></div>

    <% if @member.image_id? %>
      <%= image_tag attachment_url(@member, :image, :fill, 150, 150) %>
      <%= f.check_box :remove_image %>
      <%= f.label :remove_image %>
    <% end %>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div>
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>
  <div>
    <%= f.label :organization %>
    <%= f.text_field :organization %>
  </div>
  <div>
    <%= f.label :address %>
    <%= f.text_area :address, cols: 40, rows: 7 %>
  </div>
  <div>
    <%= f.label :affiliation %>
    <%= f.text_field :affiliation %>
  </div>
  <div>
    <%= f.label :link %>
    <%= f.text_field :link %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>

