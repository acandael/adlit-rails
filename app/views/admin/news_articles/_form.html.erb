<%= form_for [:admin, @news_article], :html => { class: "admin-add" } do |f| %>
  <header>
    <h1><i class="fa fa-newspaper-o"></i>
      <% if @news_article.new_record? %>
        New News Article</h1>
      <% else %>
        Edit News Article
      <% end %>
    </h1>
  </header>
  <%= render "shared/errors", object: @news_article %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title, autofocus: true %>
  </div>
  <div>
    <%= f.label :body %>
    <%= f.text_area :body, rows: 10 %>
  </div>
  <div>
    <%= f.label :image %>

    <div id="image">
      <% if @news_article.image_id? %>
        <%= refile_file_tag(@news_article, :image, :edit) %>
        <div class="checkbox">
          <%= f.check_box :remove_image %>
          <%= f.label :remove_image %>
        </div>
      <% end %>
    </div>

    <%= f.attachment_field :image, direct: true, data: { remote_id: :news_article_image_cache_id } %>
  </div>
  <div>
    <%= f.label :document %>
    <% if @news_article.document_id? %>
      <div class="attachment">
      <i class="fa fa-download"></i>
      <%= refile_file_tag(@news_article, :document, nil, type: :link, name: @news_article.document_filename) %>
      </div>
      <div class="checkbox">
        <%= f.check_box :remove_document %>
        <%= f.label :remove_document %>
      </div>
    <% end %>
    <%= f.attachment_field :document %>
  </div>
  <div>
    <%= f.label :link %>
    <%= f.text_field :link %>
  </div>
  <div>
      <%= f.submit %>
      <%= button_to "Cancel", admin_news_articles_path %>
  </div>
<% end %>
