<article class="news-article">
  <div class="breadcrumb">
    <%= link_to "Nieuws", news_path %>
    <a href="javascript:void(0)"><%= @news_article.title %></a>
  </div>
  <header>
    <h1><%= @news_article.title %></h1>
    <p class="date"><time datetime="<%= @news_article.created_at %>"><%= @news_article.created_at.strftime('%d %B %Y') %></time></p>
  </header>
  <aside>
    <%= image_tag attachment_url(@news_article, :image, :fill, 400, 217) %> 
  </aside>
  <div class="content">
    <p>
      <%= @news_article.body %>
    </p>
    <ul class="extra">
      <li><i class="fa fa-download"></i><a href="#" class="underline">download video</a></li>
      <li><i class="fa fa-link"></i><%= link_to @news_article.link, class: "underline" %></li>
    </ul>
  </div>
</article>


