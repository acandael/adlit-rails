<header class="navigation" role="banner">
  <div class="navigation-wrapper">
    <a href="javascript:void(0)" class="navigation-menu-button" id="js-mobile-menu">MENU</a>
    <nav role="navigation">
      <ul id="js-navigation-menu" class="navigation-menu show">
        <li class="nav-link"><%= link_to "HOME", root_path %></li>
        <li class="nav-link" data-menuanchor="news-summary"><a href="#news-summary">NIEUWS</a></li>
        <li class="nav-link"><%= link_to "TEAM", team_path, data: { no_turbolink: true } %></li>
        <li class="nav-link"><%= link_to "PROJECT", project_path, data: { no_turbolink: true } %></li>
        <li class="nav-link"><%= link_to "OUTPUT", output_path, data: { no_turbolink: true } %></li>
        <li class="nav-link lang"><i class="fa fa-flag"></i><a href="#">EN</a></li>
        <% if current_user %>
        <li class="nav-link"><%= link_to "admin", admin_path %></li>
        <li class="nav-link"><%= link_to "Sign Out", session_path, method: :delete %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>

<script>
  $(document).ready(function() {
    var menuToggle = $('#js-mobile-menu').unbind();
    $('#js-navigation-menu').removeClass("show");

    menuToggle.on('click', function(e) {
      e.preventDefault();
      $('#js-navigation-menu').slideToggle(function(){
        if($('#js-navigation-menu').is(':hidden')) {
          $('#js-navigation-menu').removeAttr('style');
        }
      });
    });
  });
</script>


